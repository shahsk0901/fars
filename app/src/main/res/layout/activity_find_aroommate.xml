<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.shahsk0901.fars.FindARoommateActivity">

    <TextView
        android:text="Availability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="26dp"
        android:id="@+id/availibility"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <RadioGroup
        android:id="@+id/rgf4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginStart="65dp" >

        <RadioButton
            android:text="Temporary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radioButton"
            android:layout_below="@+id/radioGroup"
            android:layout_toEndOf="@+id/textView2"
            android:layout_weight="1" />

        <RadioButton
            android:text="Permanent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_alignStart="@+id/radioButton"
            android:id="@+id/radioButton2"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView2"
        android:id="@+id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:layout_below="@+id/rgf4"
        android:layout_marginTop="25dp"/>

    <RadioGroup
        android:id="@+id/rgf5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgf4"
        android:layout_marginStart="85dp"
        android:layout_alignStart="@+id/textView9">

        <RadioButton
            android:text="On-Campus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView9"
            android:id="@+id/radioButton20"
            android:layout_weight="1" />

        <RadioButton
            android:text="Off-Campus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioButton20"
            android:layout_centerHorizontal="true"
            android:id="@+id/radioButton21"
            android:layout_weight="1" />
    </RadioGroup>

    <TextView
        android:text="Gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgf5"
        android:layout_alignEnd="@+id/textView9"
        android:layout_marginTop="56dp"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <RadioGroup
        android:id="@+id/rgf6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgf5"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginTop="34dp" >
        <RadioButton
            android:text="Male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/textView10"
            android:id="@+id/radioButton22" />

        <RadioButton
            android:text="Female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView10"
            android:layout_alignStart="@+id/radioButton22"
            android:id="@+id/radioButton23" />

        <RadioButton
            android:text="Other"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/radioButton23"
            android:id="@+id/radioButton26" />
    </RadioGroup>

    <TextView
        android:text="Rent Share "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rgf6"
        android:layout_alignStart="@+id/textView10"
        android:layout_marginTop="31dp"
        android:id="@+id/textView11"
        android:textAppearance="@style/TextAppearance.AppCompat.Button" />

    <SeekBar
        style="@style/Widget.AppCompat.SeekBar.Discrete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:max="1000"
        android:progress="0"
        android:layout_below="@+id/textView11"
        android:layout_marginTop="26dp"
        android:id="@+id/seekBar"
        android:layout_alignStart="@+id/textView11"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBar"
        android:layout_alignStart="@+id/textView9"
        android:layout_marginTop="28dp"
        android:id="@+id/textView12"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        android:text="Rate" />

    <Button
        android:text="Find Advertisements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button16"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>